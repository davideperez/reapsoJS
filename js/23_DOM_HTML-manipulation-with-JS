// manipular HTML con JS

//cambiando el contenido de un elemento html:

const heading = document.querySelector('.heading')

console.log(heading.textContent)

heading.textContent = 'Un nuevo Heading'


//cambiando el contenido de campo de un formulario:

const inputNombre = document.querySelector('#nombre')

inputNombre.value = 'Un valor por default'

console.log(inputNombre)


//cambiando el contenido de un array de etiquetas html:

const enlaces = document.querySelectorAll('.navegacion a')

enlaces.forEach(enlace => enlace.textContent = 'Nuevo Enlace')


